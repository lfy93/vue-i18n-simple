{
  "name": "vue-i18n-simple",
  "displayName": "Vue i18n simple",
  "description": "🔖 内测版本，请勿使用！",
  "version": "1.0.3",
  "publisher": "lfy93",
  "scripts": {
    "preinstall": "git submodule update --init --recursive",
    "deploy": "vsce publish --yarn",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Other"
  ],
  "preview": false,
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "keywords": [
    "vue",
    "vue-i18n-simple",
    "vue i18n",
    "i18n"
  ],
  "icon": "static/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lfy93/vue-i18n-simple.git"
  },
  "homepage": "https://github.com/lfy93/vue-i18n-simple.git",
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "vue-i18n-simple.transView",
        "title": "翻译当前文件的i18n",
        "icon": {
          "light": "./static/icon-translate.svg",
          "dark": "./static/icon-translate.svg"
        }
      },
      {
        "command": "vue-i18n-simple.autoInitPath",
        "title": "vue-i18n-simple: 自动配置路径"
      },
      {
        "command": "vue-i18n-simple.manualInitPath",
        "title": "vue-i18n-simple: 手动配置路径"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == vue-html",
          "command": "vue-i18n-simple.transView",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == vue",
          "command": "vue-i18n-simple.transView",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == javascript",
          "command": "vue-i18n-simple.transView",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == typescript",
          "command": "vue-i18n-simple.transView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "vue-i18n-simple",
      "properties": {
        "vue-i18n-simple.i18nPaths": {
          "type": "string",
          "default": "",
          "description": "翻译文件的目录（相对于项目根目录）"
        },
        "vue-i18n-simple.i18nCommonPath": {
          "type": "string",
          "default": "",
          "description": "公用翻译文件的目录（相对于项目根目录）。在未找到翻译项时，插件会尝试到该目录下寻找"
        },
        "vue-i18n-simple.filenameToKebabCase": {
          "type": "boolean",
          "default": false,
          "description": "如果找不到翻译文件，是否尝试将文件名转化为短横线命名格式再次查找"
        },
        "vue-i18n-simple.sourceLocale": {
          "type": "string",
          "default": "zh-CN",
          "description": "主要语言"
        },
        "vue-i18n-simple.tsNodePath": {
          "type": "string",
          "default": "node_modules/ts-node/dist/bin.js"
        }
      }
    }
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.137",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.37.0",
    "@types/yaml": "^1.0.2",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^4.8.3",
    "vsce": "^1.66.0",
    "vscode-test": "^1.0.2"
  },
  "dependencies": {
    "fast-glob": "^2.2.6",
    "lodash": "^4.17.21",
    "translation.js": "^0.7.5",
    "ts-node": "^10.9.1",
    "yaml": "^1.6.0"
  }
}
